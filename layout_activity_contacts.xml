<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <ImageView
        style="@style/BackGroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/fond" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/contacts"
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/adresse_de_l_agence_"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@+id/title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_rue_du_faubourg_poisonni_re_parisix"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/h1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/t_l_phone_et_mail_g_n_ral_"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@+id/adresse"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/telemail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/_contact_ecosyndic_fr"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/h2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/horaires"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@+id/telemail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/horaires"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/du_lundi_au_vendredi_de_h_h"
        android:textSize="18sp"
        android:textColor="#000000"
        android:layout_below="@+id/h3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"/>


    <Button
        android:id="@+id/env"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="@string/envoyer_un_mail"
        android:textStyle="bold"
        android:background="@null"
        android:drawableLeft="@drawable/mail"
        android:layout_below="@+id/horaires"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:layout_marginTop="78dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="176dp"
        android:layout_height="50dp"
        android:text="Appeler"
        android:id="@+id/appeler"
        android:textStyle="bold"
        android:drawableLeft="@drawable/call"
        android:background="@null"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/env"
        android:layout_alignLeft="@+id/env"
        android:layout_alignStart="@+id/env"
        android:layout_marginTop="27dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>