<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.ecosyndic.ecosyndic.MainActivity"
    >

    <ImageView
        style="@style/BackGroundImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/button5"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:text="@string/contacts"
        android:textColor="#000000"
        android:textSize="25sp"
        android:background="@null"
        android:drawableTop="@drawable/home"
        android:layout_alignTop="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button6"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/nous_appeler"
        android:textColor="#ff000000"
        android:textSize="25sp"
        android:background="@null"
        android:drawableTop="@drawable/handshake"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="310dp"
        android:layout_height="100dp"
        android:text="@string/se_connecter"
        android:drawableTop="@drawable/man"
        android:textColor="#ff000000"
        android:textSize="25sp"
        android:background="@null"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <Button
        android:id="@+id/quitter"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="@string/quitter"
        android:background="@null"
        android:textColor="#000000"
        android:drawableLeft="@drawable/quit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:background="@drawable/logo1"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:id="@+id/imageView"
        android:contentDescription="@string/logo"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mentions_l_gales"
        android:id="@+id/ml"
        android:background="@null"
        android:layout_alignTop="@+id/quitter"
        android:layout_alignRight="@+id/button6"
        android:layout_alignEnd="@+id/button6" />


</RelativeLayout>